<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> : <%= recipeInfo.name %></title>

    <link rel="stylesheet" href="/stylesheets/recipes.css" />
  </head>
  <body>
    <div class="container">
      <%- include('partials/navbar.ejs') %>
      <form action="/recipes/<%= recipeInfo._id %>/updateRecipe" method="post">
        <label for="name">Name</label>
        <input
          id="name"
          type="text"
          name="name"
          value="<%= recipeInfo.name %>"
        />

        <label for="category">Category</label>
        <select name="category" id="category">
          <option hidden disabled selected>Select Category</option>
          <option value="breakfasts">Breakfasts</option>
          <option value="lunches">Lunches</option>
          <option value="dinners">Dinners</option>
          <option value="desserts">Desserts</option>
          <option value="snacks">Snacks</option>
          <option value="drinks">Drinks</option>
        </select>

        <label for="description">Description</label>
        <textarea id="description" name="description">
          <%= recipeInfo.description %> 
        </textarea>

        <label for="time">Time to Make</label>
        <input
          type="number"
          name="time"
          id="time"
          value="<%= recipeInfo.time %>"
        />

        <label for="ingredients">Ingredients</label>
        <textarea name="ingredients" id="ingredients">
          <%= recipeInfo.ingredients %>
        </textarea>

        <label for="steps">Steps</label>
        <textarea name="steps" id="steps">
          <%= recipeInfo.steps %>
        </textarea>

        <label for="food-img">Image of Cooked Food</label>
        <input
          type="file"
          name="food-img"
          id="food-img"
          value="<%= recipeInfo.img %>"
        />

        <%- include('partials/pass.ejs') %>
      </form>
    </div>
  </body>
</html>
