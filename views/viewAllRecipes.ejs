<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link rel="stylesheet" href="/stylesheets/recipes.css" />
  </head>
  <body>
    <div class="container">
      <h1>All Available Recipes</h1>
      <% recipes.forEach(recipe => { %>
      <div class="card">
        <div class="card-img">
          <img src="<%= recipe.img %> " alt="cooked recipe" />
        </div>
        <div class="card-description">
          <h2><%= recipe.name %></h2>
          <p><%= recipe.description %></p>
          <div class="card-button">
            <div class="post-metadata">
              <p><%= recipe.user %></p>
              <p><%= recipe.dateAdded %></p>
            </div>
            <a href="<%= recipe.url %> "><button class="fcont">View</button></a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
